<p id="notice"><%= notice %></p>

<h1>Summaries</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Resolution</th>
      <th>Starting day</th>
      <th>Finishing day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @summaries.each do |summary| %>
      <tr>
        <td><%= summary.description %></td>
        <td><%= summary.resolution %></td>
        <td><%= summary.starting_day %></td>
        <td><%= summary.finishing_day %></td>
        <td><%= link_to 'Show', summary %></td>
        <td><%= link_to 'Edit', edit_summary_path(summary) %></td>
        <td><%= link_to 'Destroy', summary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

