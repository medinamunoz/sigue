<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">  
      <div class="well">
          <h2>Registro</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <div class="field">
                  <%= f.label :Nombre %><br />
                  <%= f.text_field :name, autofocus: true, :class =>'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :Apellido_Paterno %><br />
                <%= f.text_field :sure_name, :class =>'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :Apellido_Materno %><br />
                <%= f.text_field :last_name, :class =>'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :RUT %><br />
                <%= f.text_field :rut, :class =>'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, :class =>'form-control' %>
              </div>
            </div>


          <!-- quiero agregar el departamento -->

            <div class="form-group">
              <div class="field">
                <%= f.label :Departamento %>
                <%= f.collection_select :department_id, Department.all, :id, :name %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", :class =>'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class =>'form-control' %>
              </div>
            <div>

            <div class="actions">
              <%= f.submit "Registrar", :class => 'btn btn-primary' %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
</div>
